---
import siteData from '../data/site.json';
import DitheredImage from './DitheredImage.astro';

interface Props {
  showContact?: boolean;
}

const { showContact = false } = Astro.props;

const hasAvatar = siteData.avatar && siteData.avatar.length > 0;
---

<section class="hero">
  <div class="hero-content">
    <div class="hero-text">
      <h1 class="hero-title">{siteData.name}</h1>
      <p class="hero-subtitle">{siteData.title}</p>
      <p class="hero-bio">{siteData.bio}</p>
      {showContact && (
        <a href="/contact" class="hero-cta">Get in touch â†’</a>
      )}
    </div>
    {hasAvatar && (
      <div class="hero-avatar">
        <DitheredImage src={siteData.avatar} alt={siteData.name} width={400} />
      </div>
    )}
  </div>
</section>

<style>
  .hero {
    padding: var(--spacing-xl) 0;
    border-bottom: var(--border);
    margin-bottom: var(--spacing-xl);
  }

  .hero-content {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    gap: var(--spacing-xl);
  }

  .hero-text {
    max-width: 500px;
    flex: 1;
  }

  .hero-avatar {
    flex-shrink: 0;
    border: var(--border);
    padding: var(--spacing-sm);
    background: var(--bg);
    max-width: 400px;
  }

  .hero-title {
    font-size: 2.5rem;
    margin-bottom: var(--spacing-sm);
  }

  .hero-subtitle {
    font-size: 1.25rem;
    opacity: 0.7;
    margin-bottom: var(--spacing-lg);
  }

  .hero-bio {
    line-height: 1.6;
    margin-bottom: var(--spacing-lg);
  }

  .hero-cta {
    display: inline-block;
    border: var(--border);
    padding: var(--spacing-sm) var(--spacing-md);
    transition: background-color 0.2s, color 0.2s;
  }

  .hero-cta:hover {
    background-color: var(--text);
    color: var(--bg);
    text-decoration: none;
  }

  @media (max-width: 800px) {
    .hero-content {
      flex-direction: column-reverse;
      align-items: center;
      text-align: center;
    }

    .hero-text {
      max-width: 100%;
    }

    .hero-cta {
      margin: 0 auto;
    }
  }

  @media (max-width: 600px) {
    .hero-title {
      font-size: 2rem;
    }
  }
</style>
